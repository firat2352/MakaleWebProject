@model IEnumerable<Makale.Entities.Category>
@using Makale.WebProject

@{
    ViewBag.Title = "Kategoriler";
}

<div class="row">

    <div class="col-md-8 col-md-offset-2">
        <h2>Kategoriler</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
           
            <a href="/Categories/Create" class="btn btn-primary" >
                <span class="glyphicon glyphicon-plus"></span>Create
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        @_Bootstrap.LinkButton("/Categories/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)

                        @_Bootstrap.LinkButton("/Categories/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)

                        @_Bootstrap.LinkButton("/Categories/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)


                    </td>
                </tr>
            }

        </table>
    </div>
</div>
